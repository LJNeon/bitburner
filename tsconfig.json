{
	"include": ["NetscriptDefinitions.d.ts", "src/**/*"],
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node16",
		"baseUrl": "src/",
		"rootDir": "src/",
		"outDir": "dist/",
		"allowJs": true,
		"strict": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"/*": ["*"],
			"@ns": ["../NetscriptDefinitions.d.ts"],
			"@true-myth": ["true-myth/public/index.ts"],
			"@true-myth/*":	["true-myth/public/*.ts"]
		}
	}
}